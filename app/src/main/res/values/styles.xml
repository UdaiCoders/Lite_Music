<resources>

    <style name="AppTheme" parent="BaseTheme"/>
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item> 
    </style>

    <style name="DrawerStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlHighlight">#26000000</item> 
        <item name="listPreferredItemHeightSmall">50dp</item>
    </style>

    <style name="SeekBarStyle" parent="@style/Widget.AppCompat.SeekBar">
        <item name="colorPrimary">@android:color/white</item> 
        <item name="colorPrimaryDark">@android:color/white</item> 
        <item name="colorControlHighlight">@android:color/white</item> 
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="SeekBarStyleColor" parent="@style/Widget.AppCompat.SeekBar">
        <item name="colorPrimary">@android:color/white</item> 
        <item name="colorPrimaryDark">@android:color/white</item> 
        <item name="colorControlHighlight">@android:color/white</item> 
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

</resources>
